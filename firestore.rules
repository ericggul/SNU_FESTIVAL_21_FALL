rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  	match /guest-book/{comment} {
    	allow read;
      allow create: if request.auth.uid == request.resource.data.author;
      allow update, delete: if request.auth.uid != null;
    }
    match /jabti/{document=**} {
    	allow read, write: if true;
    }
    
    match /mini-game/{uid} {
    	allow read, write: if request.auth.uid == uid;
    }
    
    match /mission/{uid} {
      allow create: if request.auth.uid != null;
      allow read, update: if request.auth.uid == uid;
    }
    
    match /link/{doc} {
    	allow read: if true;
    }
    match /group-ranking/{doc} {
    	allow read: if true;
    }
    
    match /competition/{doc} {
    	allow read;
      allow update: if request.auth.uid != null;
    }
    
    match /vote-phone-cert/{id} {
    	allow read;
      allow update: if request.auth.uid != null;
    }
    match /vote-sing-stealer/{id} {
    	allow read;
      allow update: if request.auth.uid != null;
    }
  }
}